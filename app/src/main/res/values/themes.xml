<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_light_primary</item>
        <item name="colorPrimaryVariant">@color/label_light_primary</item>
        <item name="colorOnPrimary">@color/label_light_primary</item>
        <item name="colorOnError">@color/color_light_red</item>
        <item name="colorOnTertiary">@color/label_light_tertiary</item>
        <item name="hintTextColor">@color/color_dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/back_light_secondary</item>
        <item name="colorSecondaryVariant">@color/label_light_secondary</item>
        <item name="colorOnSecondary">@color/label_light_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>