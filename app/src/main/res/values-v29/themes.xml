<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="errorTextColor">@color/color_light_red</item>
        <item name="colorOnPrimary">@color/label_dark_primary</item>
        <item name="colorOnSecondary">@color/back_dark_secondary</item>
        <item name="colorOnTertiary">@color/label_dark_tertiary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/label_dark_disable</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>